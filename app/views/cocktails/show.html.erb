<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @cocktail.photo.key %>')">
  <h2><%= @cocktail.name %></h2>
</div>

<div class="container">
  <h2>Description</h2>
    <p><%= @cocktail.description %></p>
  <h2>Ingredients</h2>
  <ul>
  <% @cocktail.doses.each do |dose| %>
    <li><strong><%= dose.ingredient.name.capitalize %></strong> - <%= dose.description %>
    <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure you want to delete this ingredient?' } do %>
      <i class="fas fa-trash"></i>
    <% end %>
    </li> 
  <% end %>
  </ul>

  <p><%= link_to "Add a new ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-add" %></p>
  <p><%= link_to "Back to list", root_path, class: "btn btn-back" %></p>
</div>
