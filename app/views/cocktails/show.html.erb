<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @cocktail.photo_url %>);">
  <h2><%= @cocktail.name %></h2>
</div>

<div class="container">
  <h2>Ingredients</h2>
  <ul>
  <% @doses.each do |dose| %>
    <li><strong><%= dose.ingredient.name.capitalize %></strong> - <%= dose.description %>
    <%= link_to 'delete', cocktail_dose_path(dose.cocktail.id), method: :delete, data: { confirm: 'Are you sure you want to delete this ingredient?' } %>
    </li> 
  <% end %>
  </ul>

  <%= link_to "Add a new ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-add" %>
  <br>
  <br>
  <%= link_to "Back to list", cocktails_path, class: "btn btn-add" %>
</div>
